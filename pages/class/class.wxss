/* pages/class/class.wxss */
.nav{
    display: flex;
    justify-content: space-around;
    padding: 20rpx 10rpx;
}
.week{
    background: #f6f5f8;
    padding: 10rpx 30rpx;
    border-radius: 20px;
    color: #bbc0cc;
    font-weight:500;
}
.dec{
    background: #e2e3ec;
    color: #fff;
}
.class{
    margin: 60rpx 0;
    padding: 30rpx 0;
    display: flex;
    background-color: #f9f9fb;
    border-radius: 15px;
    position: relative;
  }
  .class .left{
    padding: 0 15rpx;
    text-align: center;
    display: flex;
    flex: 3;
    flex-direction: column;
    justify-content: center;
  }
  .class .left .time{
    font-weight: bolder;
    font-size: 30rpx;
    color: #605f74;
  }
  .tips{
    color: #cdccd1;
  }
  .class .right{
    padding-left: 20rpx;
    flex: 7;
  }
  .right .course{
    font-size: 32rpx;
    font-weight: bolder;
    padding-left: 6rpx;
    color: #6969a0;
    letter-spacing: 10rpx;
  }
  .right .class-room{
    padding: 6rpx 0;
    color: #9f9ea1;
  }
  .teacher{
    color: #9f9ea1;
  }
  .x{
    position: absolute;
    left: 200rpx;
    top: 0;
    height: 100%;
    background-color: #eeeef2;
    width: 1px;
  }
  @font-face {
    font-family: 'iconfont';  /* Project id 2800770 */
    src: url('//at.alicdn.com/t/font_2800770_2u7or7s8ws4.woff2?t=1631162099584') format('woff2'),
    url('//at.alicdn.com/t/font_2800770_2u7or7s8ws4.woff?t=1631162099584') format('woff'),
    url('//at.alicdn.com/t/font_2800770_2u7or7s8ws4.ttf?t=1631162099584') format('truetype');
  }
  .iconfont {
    font-family: "iconfont" !important;
    font-size: 16px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  .icon-ren:before {
    content: "\e650";
  }
  
  .icon-loc-s:before {
    content: "\e654";
  }
  .no{
    width: 100%;
    height: 100%;
    font-size: 36rpx;
    font-weight: bolder;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .content{
      padding: 0 35rpx;
  }