.main {
    position: relative;
    background-color: #f2f2f2;
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
        background-image: url("https://tva3.sinaimg.cn/large/006RKqa7ly1h0cpm2ih9pj30me0wdtai.jpg");

    background-size: 110% 100%;
}

.header {
    /* background-color: #d4e7fe; */
    width: 100vw;
    height: 10vh;
    padding: 20rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    position: relative;
    border-bottom-left-radius: 60%;
    border-bottom-right-radius: 60%;
}

.avatar {
    position: absolute;
    bottom: -90rpx;
    border: 5px solid #fff;
    width: 150rpx;
    height: 150rpx;
    margin-bottom: 15px;
    border-radius: 50%;
}

.content {
    width: 95%;
    height: 65%;
    background-color: rgba(255, 255, 255, 0.4);
    margin-top: 12vh;
    border-radius: 7px;
    box-shadow: 16px 6px 91px -47px rgba(0, 0, 0, 0.75);
    overflow: scroll;
}

.item {
    height: 120rpx;
    border-bottom: 1px solid rgb(143, 143, 143);
    margin: 0 15px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.jf {
    text-align: right;
    color: #cb4140;
    font-size: 18px;
    padding-bottom: 5px;
}

.date {
    font-size: 14px;
}

.left {
    font-size: 17px;
    font-weight: 500;
}
.right{
    text-align: right;
}
.content view:last-child{
    border: none;
}
.content button{
    width: 85rpx !important;
    background: rgb(121, 235, 121);
    padding:3px 5px !important;
    color: #fff;
    margin: 0;
    padding: 0;
    font-size: 15px;
}